{
  "manifest_version": 3,
  "name": "Last Tab Button",
  "description": "Switch to the last accessed tab",
  "version": "1.0",
  "action": {
    "default_icon": "favicon.svg",
    "default_area": "tabstrip"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["activeTab"],
  "icons": {
    "16": "favicon.svg",
    "32": "favicon.svg",
    "48": "favicon.svg",
    "96": "favicon.svg",
    "128": "favicon.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "109",
      "id": "lasttabbtn@pruna"
    }
  }

}